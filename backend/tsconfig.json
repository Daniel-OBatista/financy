{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
  
      "types": ["node"],
  
      "rootDir": "./src",
      "outDir": "./dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }